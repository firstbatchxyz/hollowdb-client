{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "rootDir": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "target": "ES2020"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules", "./lib", "./build"]
}
